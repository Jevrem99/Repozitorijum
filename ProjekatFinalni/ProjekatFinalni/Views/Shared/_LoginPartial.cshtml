@if (Session["korisnikID"] != null)
{

<ul class="nav navbar-nav navbar-right">
    <li>Korisnik:@Session["korisnikIme"].ToString()</li>
    <li>@Html.ActionLink("Škole","Index","Skola")</li>
    @{
        string admin = Session["Admin"].ToString();

        if (admin == "True")
        {
            <li>@Html.ActionLink("Korisnici", "Izlistaj", "KorisnikAdmin")</li>
        }
    }
    <li>@Html.ActionLink("Izloguj", "Izloguj", "Login")</li>
</ul>

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registruj", "DodajiliIzmeni", "Korisnicki")</li>
        <li>@Html.ActionLink("Uloguj se", "Index", "Login")</li>
    </ul>
}
